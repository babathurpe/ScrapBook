<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffc3b977">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:columnOrderPreserved="true"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="#ffcad0c7"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="3dp"
        android:useDefaultMargins="true">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/bluewater_bridge"
            android:contentDescription="@string/sarnia_bridge"
            android:focusableInTouchMode="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sarnia_bridge"
            android:id="@+id/sarnia_bridge"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/college_pool"
            android:contentDescription="@string/college_pool" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/college_pool"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/imperial_theatre"
            android:contentDescription="@string/imperial" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/overview"
            android:contentDescription="@string/overview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/imperial"
            android:id="@+id/textView2"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:layout_width="157dp"
            android:layout_height="29dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/overview"
            android:id="@+id/textView3"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="15dp"
            android:textStyle="bold" />
    </GridLayout>
</RelativeLayout>
